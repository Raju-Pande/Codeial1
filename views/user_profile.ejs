<link rel="stylesheet" href="<%= assetPath('css/user_profile.css') %>">
<img src="<%=user.avatar%>" alt="<%=user.name%>" width="100px" height="100px">




<% if(user.id==profile_user.id){ %>
   <!-- now we need to create route and controller for submit this -->

<!-- Now we are setting multer so we did in the same form with the help of this -->
<!-- we can upload file with enctype manner which is safe -->

    <form action="/user/update/<%= profile_user.id %>" enctype="multipart/form-data" method="POST">
            <!-- i want user can update the email and name -->
        <input type="text" name="name" placeholder="Your Name" value="<%= profile_user.name %>" required />
        <input type="email" name="email" value="<%= profile_user.email %>" required />
        <!-- uploading the profile using multer so we need to set into the models/user.js -->
        <input type="file" name="avatar" placeholder="Profile Picture" />
        <input type="submit" value="Update" />
    </form>

    <%}else{%>
         <!-- else only show the profile information -->
        <p>
            <%= profile_user.name %>
        </p>
        <p>
            <%= profile_user.email %>
        </p>
        <%} %>